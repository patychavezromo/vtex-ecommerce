// This is the default block implementation for the minicart-layout
{
    "flex-layout.row#phone__minicart": {
        "title": "phone__minicart",
        "children": [
            "minicart.v2#phone__minicart"
        ],
        "props": {
            "blockClass": "phone__minicart"
        }
    },

    "minicart.v2#phone__minicart": {
        "props": {
            "MinicartIcon": "icon-cart#phone__minicart-icon",
            "variation": "drawer",
            "quantityDisplay": "not-empty",
            "itemCountMode": "distinctAvailable",
            "backdropMode": "visible"
        },
        "children": [
            "minicart-base-content#phone__minicart-base-content"
        ]
    },

    "icon-cart#phone__minicart-icon": {
        "title": "minicart-icon",
        "props": {
            "size": 24,
            "blockClass": "phone__minicart-icon"
        }
    },

    "minicart-base-content#phone__minicart-base-content": {
        "title": "phone__minicart-base-content",
        "blocks": [
            "minicart-empty-state"
        ],
        "children": [
            "minicart-product-list#phone__mini-cart-product-list",
            "flex-layout.row#phone__minicart-footer-row"
        ],
        "props": {
            "blockClass": "phone__minicart-base-content"
        }
    },

    "flex-layout.row#phone__minicart-footer-row": {
        "title": "phone__minicart-footer-row",
        "props": {
            "blockClass": "phone__minicart-footer-row"
        },
        "children": [
            "flex-layout.col#phone__minicart-footer-col"
        ]
    },

    "flex-layout.col#phone__minicart-footer-col": {
        "title": "phone__minicart-footer-col",
        "children": [
            "minicart-summary",
            "minicart-checkout-button"
        ],
        "props": {
            "blockClass": "phone__minicart-footer-col"
        }
    },

    "minicart-product-list#phone__mini-cart-product-list": {
        "title": "phone__mini-cart-product-list",
        "blocks": [
            "product-list#minicart"
        ],
        "props":{
            "blockClass":"phone__mini-cart-product-list"
        }
    },
    "product-list#minicart": {
        "blocks": [
            "product-list-content-mobile"
        ]
    },
    "minicart-summary": {
        "blocks": [
            "checkout-summary.compact#minicart"
        ]
    },
    "minicart-checkout-button": {
        "props": {
            "finishShoppingButtonLink": "/checkout/#/orderform"
        }
    },
    "checkout-summary.compact#minicart": {
        "children": [
            "summary-totalizers#minicart"
        ],
        "props": {
            "totalizersToShow": [
                "Items",
                "Discounts"
            ]
        }
    },
    "summary-totalizers#minicart": {
        "props": {
            "showTotal": true,
            "showDeliveryTotal": true,
            "blockClass":"summary-totalizers"
        }
    },
    "minicart-empty-state": {
        "children": [
            "flex-layout.row#empty-state"
        ]
    },
    "flex-layout.row#empty-state": {
        "children": [
            "flex-layout.col#empty-state"
        ]
    },
    "flex-layout.col#empty-state": {
        "children": [
            // "icon-cart#minicart-empty-state",
            "flex-layout.row#minicart-default-empty-state-row",
            "image#minicart-empty-state",
            "rich-text#minicart-default-empty-state2",
            "rich-text#minicart-default-empty-state3"
        ],
        "props": {
            "horizontalAlign": "center",
            "verticalAlign": "middle",
            "rowGap": 5,
            "blockClass":"empty-state"
        }
    },
    "flex-layout.row#minicart-default-empty-state-row": {
        "title": "minicart-default-empty-state-row",
        "children": [
            "rich-text#minicart-default-empty-state"
        ],
        "props": {
            "blockClass": "minicart-default-empty-state-row"
        }
    },

    "rich-text#minicart-default-empty-state": {
        "title": "minicart-default-empty-state",
        "props": {
            "text": "Resumen de tu compra",
            "blockClass": "minicart-default-empty-state"
        }
    },
    "rich-text#minicart-default-empty-state2": {
        "title": "minicart-default-empty-state2",
        "props": {
            "text": "¿Por qué tan solo?",
            "blockClass": "minicart-default-empty-state2"
        }
    },
    "rich-text#minicart-default-empty-state3": {
        "title": "minicart-default-empty-state3",
        "props": {
            "text": "Tenemos ofertas del 50% este mes",
            "blockClass": "minicart-default-empty-state3"
        }
    },
    "image#minicart-empty-state": {
        "title": "image-minicart",
        "props": {
            "src": "/arquivos/shopping-cart.png",
            "blockClass": "image-minicart"
        }
    }
}